<%
  paginated_products = @searcher.retrieve_products([], [], {}) if params.key?(:keywords)
  paginated_products ||= products
%>

<% content_for :head do %>
  <% if paginated_products.respond_to?(:num_pages) %>
    <%= rel_next_prev_link_tags paginated_products %>
  <% end %>
<% end %>

<div data-hook="products_search_results_heading">
  <% if products.empty? %>
    <div data-hook="products_search_results_heading_no_results_found">
      <%= Spree.t(:no_products_found) %>
    </div>
  <% end %>
</div>
<% if products.any? %>
  <!-- Test display -->
  <table class="table table-hover">
    <tr>
      <th>Image</th>
      <th>Part Number</th>
      <th>Description</th>
      <th>Applications</th>
      <th>Price</th>
    </tr>
    <% products.each do |product| %>
      <!-- Spree Setup -->
      <% url = spree.product_url(product, taxon_id: @taxon.try(:id)) %>
      <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
      <!-- End Spree Setup -->
      
      <tr>
        <td style="vertical-align: middle"><!-- Image -->
          <%= link_to small_image(product, itemprop: "image"), url, itemprop: 'url' %>
        </td>
        <td style="vertical-align: middle"><!-- Part Number -->
          <% if !product.product_properties.where("property_id=?", 1).empty? %>
            <%= link_to truncate(product.property("Part Number"), length: 50), url, class: 'info', itemprop: "name", title: product.property("Part Number") %>
          <% else %>
            N/A
          <% end %>
        </td>
        <td style="vertical-align: middle"><!-- Description -->
          <%= product.description %>
        </td>
        <td style="vertical-align: middle"><!-- Description -->
          <% unless product.product_applications.empty? %> 
              <% product.product_applications.each do |product_application| %>
                  <%= product_application.name %></br>
                
              <% end %>
          <% end %>
        </td>
        <td style="vertical-align: middle"><!-- Price -->
          <span class="price selling lead" itemprop="price"><%= display_price(product) %></span>
        </td>
      </tr>
      <% end %>
    <% end %>
  </table>
<% end %>

<% if paginated_products.respond_to?(:num_pages) %>
  <%= paginate paginated_products, theme: 'twitter-bootstrap-3' %>
<% end %>
