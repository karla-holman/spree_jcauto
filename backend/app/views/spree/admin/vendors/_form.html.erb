<div data-hook="admin_vendor_form" class="row">
    <div class="col-md-4">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :phone, class: ['form-group'] do %>
      <%= f.label :phone, Spree.t(:phone) + " (ex. 206-123-4567)" %>
      <%= f.text_field :phone, :class => 'form-control' %>
      <%= f.error_message_on :phone %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :email, class: ['form-group'] do %>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.text_field :email, :class => 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :line_1, class: ['form-group'] do %>
      <%= f.label :line_1, Spree.t(:address_line_1) %>
      <%= f.text_field :line_1, :class => 'form-control' %>
      <%= f.error_message_on :line_1 %>
      <%= f.label :line_2, Spree.t(:address_line_2) %>
      <%= f.text_field :line_2, :class => 'form-control' %>
      <%= f.error_message_on :line_2 %>
      <%= f.label :city, Spree.t(:city) %>
      <%= f.text_field :city, :class => 'form-control' %>
      <%= f.error_message_on :city %>
      <%= f.label :state, Spree.t(:state_or_province) %>
      <%= f.text_field :state, :class => 'form-control' %>
      <%= f.error_message_on :state %>
      <%= f.label :zip, Spree.t(:zip) %>
      <%= f.text_field :zip, :class => 'form-control' %>
      <%= f.error_message_on :zip %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :website, class: ['form-group'] do %>
      <%= f.label :website, Spree.t(:website) %>
      <%= f.text_field :website, :class => 'form-control' %>
      <%= f.error_message_on :website %>
    <% end %>
    <%= f.field_container :notes, class: ['form-group'] do %>
      <%= f.label :notes, Spree.t(:notes) %>
      <%= text_area_tag :notes, nil, rows: 8, cols: 10, class: 'form-control'%>
      <%= f.error_message_on :notes %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :contact_name, class: ['form-group'] do %>
      <%= f.label :contact_name, Spree.t(:contact_name) %>
      <%= f.text_field :contact_name, :class => 'form-control' %>
      <%= f.error_message_on :contact_name %>
    <% end %>
  </div>
</div>